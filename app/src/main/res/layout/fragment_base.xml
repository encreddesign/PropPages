<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/splash_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/base_theme_color">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/base_button_padding"
            android:paddingBottom="@dimen/base_button_padding"
            android:paddingLeft="@dimen/base_button_padding_width"
            android:paddingRight="@dimen/base_button_padding_width"
            android:layout_centerInParent="true"
            android:text="@string/base_button_text"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@drawable/button_base"/>

    </RelativeLayout>

</LinearLayout>
